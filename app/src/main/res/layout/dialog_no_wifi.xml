<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_gradient">

    <!-- Centered CardView for glassmorphic dialog -->
    <androidx.cardview.widget.CardView
        android:id="@+id/dialog_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="16dp"
        app:cardMaxElevation="24dp"
        app:cardBackgroundColor="@color/cardBackground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Glass background -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_glass"
            android:padding="24dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Close Icon -->
                <ImageView
                    android:id="@+id/cross_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/close"
                    android:padding="8dp"
                    android:scaleType="center"
                    android:src="@drawable/ic_clear"
                    app:tint="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Camera/WiFi Icon -->
                <ImageView
                    android:id="@+id/camera_image_View"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="24dp"
                    android:contentDescription="@string/camera_image"
                    android:src="@drawable/ic_wifi_off"
                    android:scaleType="centerInside"
                    app:layout_constraintTop_toBottomOf="@id/cross_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="1:1" />

                <!-- Caption -->
                <TextView
                    android:id="@+id/image_caption"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/image_caption"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textStyle="normal"
                    app:layout_constraintTop_toBottomOf="@id/camera_image_View"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Action Button -->
                <Button
                    android:id="@+id/custom_button"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/btn_gradient"
                    android:text="@string/camera_action_button_text"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    app:layout_constraintTop_toBottomOf="@id/image_caption"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
